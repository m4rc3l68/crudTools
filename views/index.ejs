<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <ul>
    <% docs.forEach((customer)=>{ %>
      <li>
        <a href="/edit/<%= customer._id %>">
          <%= customer.name %>
        </a>
        <a href="/delete/<%= customer._id %>" onclick="return confirm('Tem certeza que deseja excluir?')">
          x
        </a>
      </li>
      <%})%>
  </ul>
  <hr>
  <a href="/new">Cadastrar novo cliente</a>
</body>

</html>